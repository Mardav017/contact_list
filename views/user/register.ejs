<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body class="h-svh">
    <%- include('../partials/nav') %>

    <div align="center">
      <form action="/user/register" method="POST">
        <table>
          <tr>
            <th>Username:</th>
            <td>
              <input
                class="bg-gray-200 rounded-md border border-gray-300"
                type="text"
                name="username"
              />
            </td>
          </tr>
          <tr>
            <th>Email:</th>
            <td>
              <input
                class="bg-gray-200 rounded-md border border-gray-300"
                type="email"
                name="email"
              />
            </td>
          </tr>
          <tr>
            <th>Password:</th>
            <td>
              <input
                class="bg-gray-200 rounded-md border border-gray-300"
                type="password"
                name="password"
              />
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <input
                class="bg-gray-300 hover:bg-gray-400 px-2 cursor-pointer rounded-md border border-gray-400"
                type="submit"
                value="Register"
              />
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center">
              Already have Account?
              <a href="../user/login"
                ><button
                  type="button"
                  class="bg-gray-300 hover:bg-gray-400 px-2 rounded-md border border-gray-400"
                >
                  Login
                </button></a
              >
            </td>
          </tr>
        </table>
      </form>
    </div>

    <br /><%- include('../partials/footer') %>
  </body>
</html>
