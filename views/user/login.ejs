<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body class="h-svh">
    <%- include('../partials/nav') %>

    <div align="center">
      <form action="/user/login" method="POST">
        <table>
          <tr>
            <th>Username:</th>
            <td>
              <input
                class="bg-gray-200 rounded-md border border-gray-300"
                type="text"
                name="username"
              />
            </td>
          </tr>
          <tr>
            <th>Password:</th>
            <td>
              <input
                class="bg-gray-200 rounded-md border border-gray-300"
                type="password"
                name="password"
              />
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <input
                class="bg-gray-300 hover:bg-gray-400 px-2 cursor-pointer rounded-md border border-gray-400"
                type="submit"
                value="Login"
              />
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center">
              New User ?
              <a href="../user/register"
                ><button
                  type="button"
                  class="bg-gray-300 hover:bg-gray-400 px-2 rounded-md border border-gray-400"
                >
                  Register
                </button></a
              >
            </td>
          </tr>
        </table>
      </form>
    </div>

    <br /><%- include('../partials/footer') %>
    <script>
      // Get the URL parameters
      const urlParams = new URLSearchParams(window.location.search);
      // Check if the 'error' parameter is present
      if (urlParams.has('error') && urlParams.get('error') === 'invalid') {
        // Display the error message
        alert('Invalid username or password');
      }
    </script>
  </body>
</html>
